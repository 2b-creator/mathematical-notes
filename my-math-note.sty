\def\newtheoremWithCrefName#1#2#3{%
    \newtheorem{#1}{#2}[#3]%
    \crefnamezh{#1}{#2}%
    \creflabelformat{#1}{##2{\rm##1}##3}%
}
\def\newtheoremWithCrefNameAndFramebox#1#2#3{%
    \def\amsEnvName{ams#1}
    \newtheoremWithCrefName{\amsEnvName}{#2}{#3}%
    \newenvironment{#1}{%
        \begin{framed}% 这个环境需要framed包，以后准备换用tcolorbox包
        \begin{\amsEnvName}%
    }{%
        \end{\amsEnvName}%
        \end{framed}%
    }%
}

